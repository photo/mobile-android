<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Trovebox.Light" parent="Holo.Theme.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:listViewStyle">@style/TransparentListView</item>
        <item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>
        <item name="actionBarStyle">@style/solid_ActionBar</item>
        <item name="actionBarTabTextStyle">@style/ActionBar_TabTextStyle</item>
        <item name="android:buttonStyle">@style/Trovebox.BeigeButton</item>
        <item name="actionBarTabStyle">@style/trovebox_ActionBarTabStyle</item>
        <item name="actionBarItemBackground">@drawable/selectable_background_trovebox</item>
        <item name="actionDropDownStyle">@style/trovebox_DropDownNav</item>
        <item name="popupMenuStyle">@style/trovebox_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/trovebox_DropDownListView</item>
        <item name="actionBarWidgetTheme">@style/Theme.example.widget</item>
    </style>

    <style name="Theme.Trovebox.Light.Stacked" parent="Theme.Trovebox.Light">
        <item name="actionBarTabTextStyle">@style/ActionBar_TabTextStyleStacked</item>
    </style>

    <style name="Theme.Trovebox.DialogActivity.Light" parent="Holo.Theme.Dialog.Light">
        <item name="android:buttonStyle">@style/Trovebox.BeigeButton</item>
    </style>

    <style name="Theme.Trovebox.Dialog.Light" parent="Holo.Theme.Dialog.Alert.Light">
        <item name="android:buttonStyle">@style/Trovebox.BeigeButton</item>
    </style>

    <style name="Theme.Trovebox.Fullscreen" parent="Holo.Theme.Light.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@drawable/bg</item>
    </style>

    <style name="Theme.Trovebox.TransparentActionBar" parent="Holo.Theme.Light.Fullscreen">
        <item name="actionBarStyle">@style/transparent_ActionBar</item>
        <item name="android:windowBackground">@drawable/bg</item>
    </style>

    <style name="Theme.Trovebox.Login" parent="Holo.Theme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_login</item>
    </style>

    <style name="solid_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/bg_actionbar</item>
        <item name="backgroundStacked">@drawable/bg_tab</item>
        <item name="titleTextStyle">@style/ActionBar_TitleTextStyle</item>
    </style>

    <style name="transparent_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_bg_black</item>
        <item name="titleTextStyle">@style/transparent_ActionBar_TitleTextStyle</item>
    </style>

    <style name="transparent_ActionBar_TitleTextStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ab_fg_white</item>
    </style>

    <style name="ActionBar_TitleTextStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ab_fg_white</item>
    </style>

    <style name="ActionBar_TabTextStyle" parent="@style/Widget.Sherlock.Light.ActionBar.TabText">
        <item name="android:textColor">@color/ab_fg_black</item>
    </style>

    <style name="ActionBar_TabTextStyleStacked" parent="@style/Widget.Sherlock.Light.ActionBar.TabText">
        <item name="android:textColor">@color/ab_fg_white</item>
    </style>

    <style name="NotificationText" parent="android:TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="NotificationTitle" parent="android:TextAppearance.Medium">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PhotoGridLayout">
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:listSelector">@null</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="YesNoSwitch" parent="Holo.Switch.Light">
        <item name="textOn">@string/yes</item>
        <item name="textOff">@string/no</item>
    </style>

    <style name="TransparentListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="TransparentExpandableListView" parent="@android:style/Widget.ExpandableListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="button_text">
        <item name="android:textColor">#928a7e</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="Trovebox.YellowButton" parent="Holo.Button">
        <item name="android:background">@drawable/btn_bg_yellow</item>
        <item name="android:textColor">@color/ab_fg_black</item>
    </style>

    <style name="Trovebox.BeigeButton" parent="Holo.Button">
        <item name="android:background">@drawable/btn_bg_beige</item>
        <item name="android:textColor">@color/ab_fg_black</item>
    </style>

    <style name="Trovebox.BeigeWithIconButton" parent="Holo.Button">
        <item name="android:background">@drawable/btn_bg_beige_with_icon</item>
        <item name="android:textColor">@color/ab_fg_black</item>
    </style>

    <style name="trovebox_ActionBarTabStyle" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_trovebox</item>
        <item name="android:background">@drawable/tab_indicator_ab_trovebox</item>
    </style>

    <style name="trovebox_DropDownNav" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_trovebox</item>
        <item name="android:background">@drawable/spinner_background_ab_trovebox</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_trovebox</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_trovebox</item>
    </style>

    <style name="trovebox_PopupMenu" parent="@style/Widget.Sherlock.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_trovebox</item>
    </style>

    <style name="trovebox_DropDownListView" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_trovebox</item>
    </style>
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.example.widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/trovebox_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/trovebox_DropDownListView</item>
        <item name="android:popupMenuStyle">@style/trovebox_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/trovebox_DropDownListView</item>
    </style>

</resources>