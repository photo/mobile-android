<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- top line -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#ccc2ae" />
        </shape>
    </item>
    <!-- top line second -->
    <item android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#c1b7a4" />
        </shape>
    </item>
    <!-- top line third -->
    <item android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="#f8f3ee" />
        </shape>
    </item>

    <!-- background gradient -->
    <item
        android:bottom="0dp"
        android:top="4dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-90"
                android:endColor="#e1d6c0"
                android:startColor="#f0e6dc" />
        </shape>
    </item>

</layer-list>