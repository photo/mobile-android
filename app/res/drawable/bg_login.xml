<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- top line -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#806a5b" />
        </shape>
    </item>

    <!-- background gradient -->
    <item android:top="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="#3b2414"
                android:startColor="#573925" />
        </shape>
    </item>

</layer-list>