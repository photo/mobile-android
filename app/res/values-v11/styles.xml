<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Trovebox.Light" parent="Theme.Trovebox.Light_Base">
        <item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>
        <item name="android:actionBarStyle">@style/solid_ActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBar_TabTextStyle</item>
        <item name="android:actionBarTabStyle">@style/trovebox_ActionBarTabStyle</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_trovebox</item>
        <item name="android:actionDropDownStyle">@style/trovebox_DropDownNav</item>
        <item name="android:popupMenuStyle">@style/trovebox_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/trovebox_DropDownListView</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.example.widget</item>
        <item name="android:spinnerDropDownItemStyle">@style/trovebox_DropDownItem</item>
        <item name="android:actionMenuTextColor">@color/ab_fg_white</item>
        <item name="android:spinnerItemStyle">@style/trovebox_SpinnerItemStyle</item>
        <item name="android:textAppearanceLargePopupMenu">@style/trovebox_PopupMenuTextLarge</item>
    </style>

    <style name="Theme.Trovebox.Light.Stacked" parent="Theme.Trovebox.Light">
        <item name="actionBarTabTextStyle">@style/ActionBar_TabTextStyleStacked</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBar_TabTextStyleStacked</item>
    </style>

    <style name="Theme.Trovebox.TransparentActionBar" parent="Holo.Theme.Light.Fullscreen">
        <item name="actionBarStyle">@style/transparent_ActionBar</item>
        <item name="android:actionBarStyle">@style/transparent_ActionBar</item>
        <item name="android:windowBackground">@drawable/bg</item>
    </style>

    <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent" />

    <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.EventContent.Title" />

    <style name="solid_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/bg_actionbar</item>
        <item name="backgroundStacked">@drawable/bg_tab</item>
        <item name="android:background">@drawable/bg_actionbar</item>
        <item name="android:backgroundStacked">@drawable/bg_tab</item>
        <item name="titleTextStyle">@style/ActionBar_TitleTextStyle</item>
        <item name="android:titleTextStyle">@style/ActionBar_TitleTextStyle</item>
    </style>

    <style name="transparent_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_bg_black</item>
        <item name="android:background">@drawable/ab_bg_black</item>
        <item name="titleTextStyle">@style/transparent_ActionBar_TitleTextStyle</item>
        <item name="android:titleTextStyle">@style/transparent_ActionBar_TitleTextStyle</item>
    </style>

</resources>