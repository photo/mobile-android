<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/site_padding_half"
    android:paddingLeft="@dimen/site_padding"
    android:paddingRight="@dimen/site_padding"
    android:paddingTop="@dimen/site_padding_half" >

    <CheckBox
        android:id="@+id/tag_checkbox"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="tag" />

    <LinearLayout
        android:id="@+id/tag_click_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/text_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:duplicateParentState="true"
            android:text="5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:src="@drawable/button_right" />
    </LinearLayout>

</LinearLayout>