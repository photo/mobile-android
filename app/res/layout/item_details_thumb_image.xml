<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  >
	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="@dimen/detail_thumbnail_spacing" >
	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/detail_thumb_unselected_border"
	        android:id="@+id/background_container"
	        android:padding="@dimen/detail_thumbnail_border" >
	
	        <ImageView
	            android:id="@+id/image"
	            android:layout_width="@dimen/detail_thumbnail_size"
	            android:layout_height="@dimen/detail_thumbnail_size"
	            android:scaleType="centerCrop" 
	            />
	    </LinearLayout>
	
	</RelativeLayout>
</LinearLayout>