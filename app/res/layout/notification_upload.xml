<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout" android:layout_width="match_parent"
	android:layout_height="match_parent" android:orientation="vertical"
	android:paddingTop="7dp" android:paddingLeft="5dp">

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:paddingTop="3dp">
		<ImageView android:id="@+id/image" android:layout_width="25dp"
			android:layout_height="25dp" android:scaleType="fitCenter" />
		<TextView android:id="@+id/title" style="@style/NotificationTitle"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:layout_weight="1" android:singleLine="true"
			android:ellipsize="marquee" android:fadingEdge="horizontal"
			android:paddingLeft="4dp" />
	</LinearLayout>

	<ProgressBar android:id="@+id/progress"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_marginLeft="8dp" 
		android:layout_marginTop="3dp" 
		style="?android:attr/progressBarStyleHorizontal" />

</LinearLayout>